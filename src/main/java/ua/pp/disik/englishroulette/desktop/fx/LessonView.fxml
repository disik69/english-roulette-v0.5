<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.text.TextFlow?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:id="main"
          fx:controller="ua.pp.disik.englishroulette.desktop.fx.LessonController"
          hgap="5" vgap="5">
    <padding>
        <Insets bottom="5" left="5" right="5" top="5"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints percentWidth="50"/>
        <ColumnConstraints percentWidth="50"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="20"/>
        <RowConstraints percentHeight="35"/>
        <RowConstraints percentHeight="35"/>
        <RowConstraints percentHeight="10"/>
    </rowConstraints>
    <children>
        <Label fx:id="numberLabel"
               GridPane.halignment="CENTER"
               GridPane.columnIndex="0"
               GridPane.rowIndex="0"
               style="-fx-font-size: 15px;"/>
        <Label fx:id="countLabel"
               GridPane.halignment="CENTER"
               GridPane.columnIndex="1"
               GridPane.rowIndex="0"
               style="-fx-font-size: 15px;"/>
        <StackPane GridPane.columnIndex="0"
                   GridPane.rowIndex="1"
                   GridPane.columnSpan="2">
            <padding>
                <Insets left="25" right="25"/>
            </padding>
            <children>
                <StackPane fx:id="card"
                           styleClass="card"
                           onMouseClicked="#handleTurn">
                    <children>
                        <Label fx:id="exerciseLabel"
                               id="exerciseLabel"
                               style="-fx-font-size: 30px;"/>
                    </children>
                </StackPane>
            </children>
        </StackPane>
        <StackPane GridPane.columnIndex="0"
                   GridPane.rowIndex="2"
                   GridPane.columnSpan="2">
            <padding>
                <Insets left="25" right="25"/>
            </padding>
            <children>
                <StackPane fx:id="check"
                           styleClass="card, revers-card">
                    <children>
                        <TextArea fx:id="checkText"
                                  id="checkText"
                                  style="-fx-font-size: 30px;"/>
                    </children>
                </StackPane>
            </children>
        </StackPane>
        <Button fx:id="nextButton" text="NEXT" onAction="#handleNext"
                GridPane.halignment="CENTER"
                GridPane.columnIndex="0"
                GridPane.rowIndex="3"
                GridPane.columnSpan="2"
                style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: blue;"/>
    </children>
</GridPane>
